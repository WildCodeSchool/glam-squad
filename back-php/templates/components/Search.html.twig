<div{{ attributes }} class="container my-4">
    <div class="row">
        <div class="col-12 mb-3">
            <div class="input-group">
                <input type="search" id="search" class="form-control" placeholder="Recherche..." data-model="query">
{#                <button class="btn btn-outline-secondary" type="submit">#}
{#                    <i class="bi bi-search"></i>#}
{#                </button>#}
                <button class="btn btn-outline div2 " type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        {% for product in this.products %}
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.nameProduct }}</h5>
                        <a href="{{ path("predict", { slug: product.slug }) }}" class="btn btn-primary">Voir plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
